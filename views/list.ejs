<!DOCTYPE html>
<html lang="en">

<%- include('header'); -%> 

<body>


    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>

    <div class="box">
        
        <% for(let i=0; i<newItems.length; i++){ %>
            <form action="/delete" method="POST">
            <div class="item">
            <input type="checkbox" name="checkbox" value="<%=newItems[i]._id%>" onChange="this.form.submit()">
            <p><%= newItems[i].name %></p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>"></input>
            </form>
        
        <%  }  %>

        <form action="/" method="POST" class="item">
            <input type="text" name="toDoList" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value=<%= listTitle %>  class="btn">+</button>
        </form>

    </div>



</body>

<%- include('footer'); -%> 

</html>